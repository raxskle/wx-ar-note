/* components/messageItem/messageItem.wxss */
.messageItem{
	width: 100vw;
	height: auto;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}

.messageBox{
	width: 85vw;
	margin-top: 5vh;
	margin-bottom: 5vh;
	box-sizing: border-box;
	padding: 2vh;
	display: flex;
	flex-direction: column;
	justify-content: space-evenly;
	align-items: center;
	position: relative;
	
	background-position: 0px 0px;
	background-size: 100% 100%;
	background-image: url("data:image/png;base64,");

	filter: drop-shadow(10px 10px 10px #8d8d8d);
}

.locationIcon{
	height: 3vh;
    width: 2.4vh;
    object-fit: contain;
	margin-left: 2vw;
	margin-right: 2vw;
	/* aspect-ratio: 1; */
	/* background-color: green; */
}

.locationLabel{
	height: 5vh;
	min-width: 60%;	
	box-sizing: border-box ; 	
	border: 1px solid #A6ACAF ;
	display: flex;
	justify-content: flex-start;
	align-items: center;
	align-self: flex-start;
	margin-bottom: 2vh;
	/* padding-left: 2vw; */
	padding-right: 2vw;

}

.messageText{
	border: 1px solid #A6ACAF ;
	width: 100%;
	min-height: 15vh;
	box-sizing: border-box;
	padding: 1vh;
	padding-top: 2vh;
	padding-bottom: 2vh;
}

.messageinfo{
	height: 17vh;
	/* width: 100%; */
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: flex-end;
	position: relative;
	align-self: flex-end;
}

.writer{
	min-width: 40%;
	width: 100%;
	/* height: 5vh; */
	border: 1px solid #A6ACAF ;
	margin-top: 2vh;
	display: flex;
	justify-content: flex-end;
	align-items: center;
	padding-left: 1vw;
	padding-right: 1vw;
	padding: 1.5vw;
	box-sizing: border-box;
	font-size: 15px ;
}

.writeTime{
	min-width: 40% ;
	width: 100%;
	/* height: 5vh; */
	border: 1px solid #A6ACAF ;
	margin-top: 2vh;
	display: flex;
	justify-content: flex-end;
	align-items: center;
	padding-left: 1vw;
	padding-right: 1vw;
	padding: 1.5vw;
	box-sizing: border-box;
	font-size: 15px;
}
