/* components/messageItem/messageItem.wxss */
.messageItem{
	width: 100vw;
	height: auto;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}

.messageBox{
	width: 100vw;
	margin-top: 5vh;
	margin-bottom: 5vh;
	box-sizing: border-box;
    padding: 2vh;
	display: flex;
	flex-direction: column;
	justify-content: space-evenly;
	align-items: center;
	position: relative;

}

.msg-box-img{
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: -1;
}

.locationIcon{
	height: 3vh;
    width: 2.4vh;
    object-fit: contain;
	margin-left: 2vw;
	margin-right: 2vw;
	/* aspect-ratio: 1; */
	/* background-color: green; */
}
.msg-location-img{
    position: absolute;
    width: 100%;
    height: 100%;
}
.locationLabel{
	height: 5vh;
	/* min-width: 50%;	 */
	box-sizing: border-box ; 	
	/* border: 1px solid #A6ACAF ; */
	display: flex;
	justify-content: flex-start;
	align-items: center;
	align-self: flex-start;
	margin-bottom: 2vh;
	/* padding-left: 2vw; */
	padding-right: 2vw;
    position: absolute;
    left: 10vw;
    top: 4%;
    padding: 2.5vw;
}


.msg-item-bg2-img{
    position: absolute;
    top: 6%;
    right: 10vw;
    width: 26.6vw;
    height: 13.0vw;
}

.msg-item-bg3-img{
    position: absolute;
    bottom: 8%;
    /* top: 50%; */
    left: 10vw;
    width: 26.6vw;
    height: 13.0vw;
}
.messageText{
	/* border: 1px solid #A6ACAF ; */
	width: 88%;
	min-height: 20vh;    
	box-sizing: border-box;
	padding: 1vh;
    position: relative;
    margin-top: 15%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.messageRealText{
    width: 57%; 
    height: 50%;
    margin-top: 20%;
    margin-bottom: 35%;
}

.msg-item-bg1-img{
    position: absolute;
    width: 100%;
    height: 100%;
}

.messageinfo{
	height: 16vh;
	/* width: 100%; */
    display: flex;
    margin-bottom: 10%;
	flex-direction: column;
	justify-content: flex-start;
	align-items: flex-end;
	position: relative;
	align-self: flex-end;
}

.writer{
	min-width: 40%;
	width: 100%;
	/* height: 5vh; */
    /* border: 1px solid #A6ACAF ; */
    color: #71955A;
    margin-top: 1vh;
    margin-right: 6vw;
	display: flex;
	justify-content: flex-end;
	align-items: center;
	padding-left: 1vw;
	padding-right: 1vw;
	padding: 1.5vw;
	box-sizing: border-box;
	font-size: 15px ;
}

.writeTime{
	min-width: 40% ;
	width: 100%;
	/* height: 5vh; */
