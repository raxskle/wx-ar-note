/* pages/home/home.wxss */
.container {
    height: 100vh;
    width: 100vw;
    padding: 0px;
    /* font-size: 14px; */
    z-index: 20;
/* 		background-image: url("@/static/fakebg.jpg");
    background-size: 100%; */
    background-color: #E8E8E8;
}
    
.btnwrap{
    height: 100vh;
    width: 100vw;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    position: relative;		
}

.btnContainer{
    height: 25vh;
    width: 100vw;
    margin-bottom: 6vh;
    /* background-color: bisque; */
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: center;
    z-index: 21;
}

.navigator {
    z-index: 22;
}
.bgimg{
    z-index: 0;
    position: absolute;
    top: 0vh;
    height:94vh;
    width: 100vw;
    object-fit: fill;
}
.btmtext{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.btmtext text{
    color: #1e1e1e;
    padding: 0px;
}

.btnbox{
    position: fixed;   
    height: 6vh;     
    width: 80vw;
    /* left: 20vw;     */
    bottom: 12vh;    
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
}
.home-btn{
    position: relative;
    width: 30vw;
    height: 100%;
    border-radius: 5px;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
}



.btn-img{
    position: absolute;
    width: 100%;
    height: 100%;
}

.homt-btn-text{
    position: absolute;
    color: white;
}