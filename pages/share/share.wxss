/* pages/share/share.wxss */
.container{
	height: 100vh;
	width: 100vw;
	position: relative;	
	background-color: #8f8f8f;
}
.popupwrap{
	width: 100vw;
	height: 94vh;
	margin-bottom: 6vh;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}

.popup{
	width: 85vw;
	/* height: 80vh; */
	background-color: #F5F5F5;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: center;
	border-radius: 5px;
	overflow: hidden;
}

.canvasBox{
	width: 85vmin;	
	height: 100vmin;
	background-color: #E8E8E8;
}

.btnBar{
	width: 100%;
	margin-top: 2vh;
	margin-bottom: 2vh;
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
	/* background-color: #94e2e3; */
}

.cancel{
	background-color: #979ca1;
}

.sharebtn{
    color: white;
    padding: 2vmin;
    max-width: 30vw;
    box-sizing: border-box;
}
.saveImg{
    background-color: rgb(244, 170, 63);    
}
